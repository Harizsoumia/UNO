package unoGamepackage;

import java.util.List;

/**
 * Interface defining the methods that the game view must implement
 * to be connected with the GameController
 */
public interface GameView {
    /**
     * Updates the game state display
     * 
     * @param players List of all players
     * @param currentPlayerIndex Index of the current player
     * @param topCard Current top card on the discard pile
     * @param direction Game direction (1 for clockwise, -1 for counter-clockwise)
     * @param winner Winner of the game if the game is over, null otherwise
     */
    void updateGameState(List<Player> players, int currentPlayerIndex, Card topCard, int direction, Player winner);
    
    /**
     * Shows notification when a card is played
     * 
     * @param player Player who played the card
     * @param card Card that was played
     */
    void showCardPlayed(Player player, Card card);
    
    /**
     * Shows notification when an invalid move is attempted
     * 
     * @param player Player who attempted the invalid move
     * @param card Card that couldn't be played
     */
    void showInvalidMove(Player player, Card card);
    
    /**
     * Shows notification when a player is skipped
     * 
     * @param player Player who was skipped
     */
    void showPlayerSkipped(Player player);
    
    /**
     * Shows notification when the direction of play changes
     * 
     * @param isReversed true if direction is counter-clockwise, false if clockwise
     */
    void showDirectionChanged(boolean isReversed);
    
    /**
     * Shows notification when a player draws a card
     * 
     * @param player Player who drew the card
     * @param card Card that was drawn
     */
    void showCardDrawn(Player player, Card card);
    
    /**
     * Shows notification when the color is changed (usually after a wild card)
     * 
     * @param newColor The new color chosen
     */
    void showColorChanged(Color newColor);
    
    /**
     * Prompts the user to select a color (for wild cards)
     */
    void promptColorSelection();
    
    /**
     * Shows the game result when a player wins
     * 
     * @param winner The player who won
     */
    void showGameResult(Player winner);
}
